<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:ManageGo.UI.Pages"
    xmlns:vm="clr-namespace:ManageGo.Core.Managers.ViewModels"
    x:Class="ManageGo.Pages.LoginPage"
    x:TypeArguments="vm:LoginViewModel">
    <ContentPage.Content>
        
        <StackLayout Spacing="0" HorizontalOptions="CenterAndExpand" WidthRequest="400" >
            
            <Label Text="Email address:" HorizontalTextAlignment="Center" Margin="0,15,0,0" />
            <Entry Text="{Binding Username}" WidthRequest="125" />

            <Label Text="Password:" HorizontalTextAlignment="Center" Margin="0,10,0,0" />
            <Entry Text="{Binding Password}" WidthRequest="125" />

            <Button Text="Login" Command="{Binding LoginCommand}" Margin="0,10,0,0" WidthRequest="75" />

            <Label Text="Forgot you password?" HorizontalTextAlignment="Center" Margin="0,10,0,0" />
            <Button Text="Reset password" Command="{Binding ResetPasswordCommand}" WidthRequest="75" />    

            <Label Text="Don't have an account yet?" HorizontalTextAlignment="Center" Margin="0,10,0,0" />
            <Button Text="Contact us to sign up" Command="{Binding SignUpCommand}" WidthRequest="75" /> 
            
       </StackLayout>
                
    </ContentPage.Content>
</local:BaseContentPage>
