<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:ManageGo.UI.Pages"
    xmlns:vm="clr-namespace:ManageGo.Core.Managers.ViewModels"
    x:Class="ManageGo.Pages.RegisterPage"
    x:TypeArguments="vm:RegisterViewModel"
    ControlTemplate="{StaticResource HeaderPageTemplate}">
    <ContentPage.Content>
        
        <StackLayout Spacing="0" HorizontalOptions="Center" Margin="0,50,0,0" WidthRequest="200">

            <Label Text="Your name:" Style="{StaticResource entryDescriptionLabel}" Margin="0,0,0,5" />
            <Entry Text="{Binding Name}" MinimumWidthRequest="200"/>

            <Label Text="Company name:" Style="{StaticResource entryDescriptionLabel}" Margin="0,10,0,5" />
            <Entry Text="{Binding CompanyName}" WidthRequest="200" />

            <Label Text="Email address:" Style="{StaticResource entryDescriptionLabel}" Margin="0,0,0,5" />
            <Entry Text="{Binding Email}" MinimumWidthRequest="200"/>

            <Label Text="Phone number:" Style="{StaticResource entryDescriptionLabel}" Margin="0,10,0,5" />
            <Entry Text="{Binding PhoneNumber}" WidthRequest="200" />

            <Label Text="# of units under management:" Style="{StaticResource entryDescriptionLabel}" Margin="0,0,0,5" />
            <Entry Text="{Binding UnitCount}" MinimumWidthRequest="200"/>

            <Button Text="Submit" Command="{Binding SubmitCommand}" Style="{StaticResource primaryBackgroundButton}" 
                    Margin="0,10,0,0" WidthRequest="20" />
            
       </StackLayout>
        
    </ContentPage.Content>
</local:BaseContentPage>
