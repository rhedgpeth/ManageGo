<?xml version="1.0" encoding="UTF-8"?>
<local:BasePopupPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:ManageGo.UI.Pages"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:controls="clr-namespace:ManageGo.Controls;"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    xmlns:vm="clr-namespace:ManageGo.Core.Managers.ViewModels"
    x:Class="ManageGo.Pages.CreateEventPage"
    x:TypeArguments="vm:CreateEventViewModel">
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
            PositionIn="Center"
            PositionOut="Center"
            ScaleIn="1.2"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>
    <!--You can use any elements here which are extended from Xamarin.Forms.View-->


    <Frame Style="{StaticResource Popover}">
        
           <StackLayout 
                VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand"
                BackgroundColor="White"
                Padding="0">

                <Image Source="close_grey" Margin="0,-18,-22,0" HorizontalOptions="End">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CancelCommand}" NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
             
                <Label Text="Create event:" TextColor="#5D5E60"/>

                <Label Text="Date &amp; Time:" TextColor="#ADAEB1" Margin="0,10,0,0" FontSize="14" />

                <controls:ClockView WidthRequest="325" HeightRequest="325" HorizontalOptions="Center" />

                <controls:BorderedFrame Padding="10" IsVisible="false">
                    <controls:BorderedFrame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectDateTimeCommand}" NumberOfTapsRequired="1" />
                    </controls:BorderedFrame.GestureRecognizers>
                    <Label Text="Select" FontSize="14" />
                </controls:BorderedFrame>

                <controls:CalendarView IsVisible="false" HeightRequest="300" WidthRequest="100" />

                <!--
                <controls:CalendarView IsVisible="{Binding ShowCalendar}" HeightRequest="300" WidthRequest="100" />
                -->

                <Label Text="Comment:" TextColor="#ADAEB1" Margin="0,15,0,0" FontSize="14" />

                <controls:BorderedFrame Padding="0">
                    <Editor HorizontalOptions="FillAndExpand" HeightRequest="100"  />
                </controls:BorderedFrame>

                <Button Text="Invite" Image="profile_blue.png" BackgroundColor="#F9FAFB" 
                        TextColor="#3E90F4" Margin="0,15,0,0" WidthRequest="100" />
            
                <Button Text="Create event" BackgroundColor="#55C433" Command="{Binding SaveCommand}"
                        TextColor="White" FontAttributes="Bold" HorizontalOptions="FillAndExpand" Margin="0,15,0,15" />
            
            </StackLayout>
        
    </Frame>

</local:BasePopupPage>
