<?xml version="1.0" encoding="UTF-8"?>
<Grid 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:controls="clr-namespace:ManageGo.Controls"
    x:Class="ManageGo.Controls.ClockView">

    <controls:Clock Grid.Row="0" x:Name="Clock" WidthRequest="275" HeightRequest="275" 
                    HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

    <Label Grid.Row="0" x:Name="TimeLabel" Text="12:00 AM" FontSize="14"
           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0" />
  
</Grid>
