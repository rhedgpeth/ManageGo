<?xml version="1.0" encoding="UTF-8"?>
<Grid 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    RowSpacing="0"
    x:Class="ManageGo.Controls.SearchView">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="30" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="1" />
    </Grid.RowDefinitions>

    <StackLayout Grid.Row="0" Grid.Column="1" VerticalOptions="Center">
        <Image Source="search_grey" Aspect="AspectFit" />
    </StackLayout>
    
    <Editor Grid.Row="0" Grid.Column="2" />

    <BoxView Grid.Row="1" Grid.ColumnSpan="3" HeightRequest="1" HorizontalOptions="FillAndExpand" BackgroundColor="#DFDFE0" />
    
</Grid>
